<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PocketBook.Views.AuthorTitleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">
    <StackLayout Style="{StaticResource AuthorLayout}">
        <Label Style="{StaticResource AuthorTitle}" Text="{Binding Title, Source={x:Reference this}}" />
    </StackLayout>
</ContentView>
